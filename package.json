{
  "name": "hydration-react",
  "version": "0.0.1",
  "description": "A combination of hydration possibilities created with React",
  "main": "index.js",
  "scripts": {
    "http": "http-server -c-1",
    "start:csr": "http-server -c-1 ./client/createRoot",
    "start:ssg": "node server/renderToStaticMarkup/buildStatic.js && http-server -c-1 ./server/renderToStaticMarkup/dist",
    "build:html": "cp client/hydrateRoot/index.html build/public/index.html",
    "build:components": "esbuild shared/components/* --bundle --outdir=build/public/js/components --loader:.js=jsx",
    "build:client": "esbuild client/hydrateRoot/index.js --bundle --outfile=build/public/js/index.js --loader:.js=jsx",
    "build:server-1": "esbuild server/renderToString/index.js --bundle --outfile=build/server.js --platform=node --loader:.js=jsx",
    "start:hydrate-1": "conc 'npm run build:html' 'npm run build:components' 'npm run build:client' 'npm run build:server-1' && node build/server.js",
    "start:hydrate-2": "conc",
    "start:hydrate-3": "conc",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "react",
    "hydration"
  ],
  "author": "MBing",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.17.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.2",
    "@babel/preset-env": "^7.23.2",
    "@babel/preset-react": "^7.22.15",
    "@babel/register": "^7.22.15",
    "concurrently": "^8.2.1",
    "esbuild": "^0.19.5",
    "http-server": "^14.1.1"
  }
}
